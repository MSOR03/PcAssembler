datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Usuario {
  id_usuario  Int      @id @default(autoincrement())
  nombre      String
  correo      String   @unique
  contrasena  String
  rol         String   @default("usuario")
  resetToken  String?  // <-- Agrega esta línea (nullable porque puede ser null)
  Ensambles   Ensamble[]
  Notificaciones Notificacion[]
  Carritos    Carrito[]
  HistorialCompras HistorialCompras[]
}

model Componente {
  id_componente    Int     @id @default(autoincrement()) // ID autoincremental
  nombre           String
  categoria        String
  precio           Float
  marca            String
  especificaciones Json?
  url              String
  lowestPrice      Float
  averageRating    Float?
  imagenUrl        String
  Ensamble_Componente Ensamble_Componente[]
  Carritos         Carrito[]
  compatibilidad   CompatibilidadSocketChipset[] // Relación con la tabla de compatibilidad
}

model Ensamble {
  id_ensamble      Int     @id @default(autoincrement())
  id_usuario       Int
  nombre           String
  costo_total      Float   @default(0)
  fecha_creacion   DateTime @default(now())
  fecha_modificacion DateTime @default(now())
  token_compartir  String? @unique
  es_publico       Boolean @default(false)
  Usuario          Usuario @relation(fields: [id_usuario], references: [id_usuario])
  Ensamble_Componente Ensamble_Componente[]
  Ensambles_Top    Ensambles_Top?
  EvaluacionIA     EvaluacionIA?
}

model Ensamble_Componente {
  id_ensamble    Int
  id_componente  Int
  Ensamble       Ensamble  @relation(fields: [id_ensamble], references: [id_ensamble])
  Componente     Componente @relation(fields: [id_componente], references: [id_componente])
  @@id([id_ensamble, id_componente])
}

model Notificacion {
  id_notificacion Int      @id @default(autoincrement())
  id_usuario      Int
  mensaje         String
  fecha           DateTime @default(now())
  Usuario         Usuario  @relation(fields: [id_usuario], references: [id_usuario])
}

model Carrito {
  id_carrito     Int      @id @default(autoincrement())
  id_usuario     Int
  id_componente  Int
  cantidad       Int      @default(0)
  Usuario        Usuario  @relation(fields: [id_usuario], references: [id_usuario])
  Componente     Componente @relation(fields: [id_componente], references: [id_componente])
}

model HistorialCompras {
  id_compra      Int      @id @default(autoincrement())
  id_usuario     Int
  fecha          DateTime @default(now())
  total          Float
  Usuario        Usuario  @relation(fields: [id_usuario], references: [id_usuario])
}

model Ensambles_Top {
  id_top         Int      @id @default(autoincrement())
  id_ensamble    Int      @unique
  descripcion    String
  calificacion   Int      
  precio_aproximado Float
  Ensamble       Ensamble @relation(fields: [id_ensamble], references: [id_ensamble])
}

// Nueva tabla para la compatibilidad entre sockets y chipsets
model CompatibilidadSocketChipset {
  id         Int    @id @default(autoincrement())
  socket     String
  chipset    String
  Componentes Componente[]
}

// Tabla para almacenar evaluaciones de IA
model EvaluacionIA {
  id_evaluacion      Int      @id @default(autoincrement())
  id_ensamble        Int      @unique
  puntuacion_general Float?
  resumen            String?
  puntos_fuertes     Json?    // Array de strings
  puntos_debiles     Json?    // Array de strings
  compatibilidad     Json?    // { estado, detalles }
  balance            Json?    // { cpu_gpu, ram, almacenamiento, fuente }
  uso_recomendado    Json?    // Array de strings
  recomendaciones    Json?    // Array de strings
  conflictos         Json?    // Array de strings
  precio_valor       String?
  fecha_evaluacion   DateTime @default(now())
  Ensamble           Ensamble @relation(fields: [id_ensamble], references: [id_ensamble], onDelete: Cascade)
}
